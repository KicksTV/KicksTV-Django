--- Django commands ---

	python -m django --version
	django-admin startproject mysite
	python manage.py startapp polls
	python manage.py createsuperuser



--- Heroku ---
	
	heroku login
	heroku -version
	heroku git:remote -a "appname"


--- install heroku ---

	sudo add-apt-repository "deb https://cli-assets.heroku.com/branches/stable/apt ./"
	curl -L https://cli-assets.heroku.com/apt/release.key | sudo apt-key add -
	sudo apt-get update
	sudo apt-get install heroku 

--- Git ---

	git remote -v    give repositories
	git clone "url"
	git add "filename"
	git add -A            adds all files
	git commit -m ""
	git push

	git push heroku heroku:master  -  git push <REMOTENAME> <LOCALBRANCHNAME>:<REMOTEBRANCHNAME>

	--- clearing commit history ---

		rm -rf .git
		git init  -  creating new git
		git add .
		git commit -m
		git remote add origin <github-url>
		git push -u -f origin master

	--- pull from master into local branch --- 

		git checkout dmgr2      # gets you "on branch dmgr2"
		git fetch origin        # gets you up to date with origin
		git merge origin/master

--- PIP ---

	sudo pip install - global install
	pip install - env install
	pip freeze
	pip freeze > requirements.txt
	pip install -r requirements.txt

--- Removing Git Commit History ---
	git checkout --orphan newBranch
	git add -A  # Add all files and commit them
	git commit
	git branch -D master  # Deletes the master branch
	git branch -m master  # Rename the current branch to master
	git push -f origin master  # Force push master branch to github
	git gc --aggressive --prune=all     # remove the old files

--- Virtualenv ---
	virtualenv <my_project>


--- Postgres Database ---

	psql postgres	
	psql (DBNAME)

	sudo su - postgres
	psql
	
	CREATE DATABASE myproject;
	CREATE USER myprojectuser WITH PASSWORD 'password';
	GRANT ALL PRIVILEGES ON DATABASE (project) TO (user);


	SELECT * FROM pg_stat_activity WHERE datname='kickstvdjango';              # Query for deleting database
	SELECT pg_terminate_backend (pg_stat_activity.pid) 
	FROM pg_stat_activity WHERE 	pg_stat_activity.datname='kickstvdjango';
	DROP DATABASE kickstvdjango;
	
	\q       # Quit
	exit

